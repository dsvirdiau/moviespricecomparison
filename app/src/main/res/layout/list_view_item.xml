<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cardViewMargin">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/paddingBottom">

        <ImageView
            android:id="@+id/ivPoster"
            android:layout_width="@dimen/widthPhoto"
            android:layout_height="@dimen/heightPhoto"
            android:contentDescription="@string/poster"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvMovieTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/movieTitleTextSize"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/paddingLeft"
            android:paddingEnd="@dimen/paddingRight"
            android:paddingTop="@dimen/paddingTop"
            android:paddingBottom="@dimen/paddingBottom"
            app:layout_constraintTop_toBottomOf="@+id/ivPoster"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvActors"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/movieActorsTextSize"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/paddingLeft"
            android:paddingEnd="@dimen/paddingRight"
            android:paddingTop="@dimen/paddingTop"
            android:paddingBottom="@dimen/paddingBottom"
            app:layout_constraintTop_toBottomOf="@+id/tvMovieTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvFilmWorldPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/moviePriceTextSize"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/marginPrice"
            android:paddingStart="@dimen/paddingPrice"
            android:paddingEnd="@dimen/paddingPrice"
            app:layout_constraintTop_toBottomOf="@+id/tvActors"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvCinemaWorldPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/moviePriceTextSize"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/marginPrice"
            android:paddingStart="@dimen/paddingPrice"
            android:paddingEnd="@dimen/paddingPrice"
            app:layout_constraintTop_toBottomOf="@+id/tvFilmWorldPrice"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>